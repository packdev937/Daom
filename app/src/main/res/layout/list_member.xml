<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:background="#00000000"
    android:elevation="10dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_list_memberNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_list_arrivedInfo"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/tv_list_arrivedInfo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/border_round"
        android:backgroundTint="@color/notArrivedBtn"
        android:gravity="center"
        android:text="도착 전"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_list_memberNickname"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_list_penaltyInfo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="+1000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_list_arrivedInfo"
        app:layout_constraintEnd_toEndOf="@id/tv_list_arrivedInfo"
        app:layout_constraintTop_toTopOf="@id/tv_list_arrivedInfo"
        app:layout_constraintStart_toStartOf="@id/tv_list_arrivedInfo"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>